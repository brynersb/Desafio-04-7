{% extends "layout.njk" %}

{% block content %}
    <main>
        <div class="card table-container">
            <a href="/students/create">CRIAR</a>
            <table>
                <thead>
                    <th>Aluno</th>
                    <th>Email</th>
                    <th>Ano Escolar</th>
                    <th>Ação</th>
                </thead>

                <tbody>
                    {% for student in students %}
                        <tr>
                            <td>
                                <span style="background-image: url({{student.avatar_url}})"></span>
                                {{student.name}}
                            </td>
                            <td>

                                
                                   <a href="mailto:{{student.email}}" title=""> {{student.email}}

                            </td>
                            <td>
                                {{ student.school_year }}
                            </td>
                            <td>
                                <a href="/students/{{student.id}}">VER</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
</main>

{% endblock content %}