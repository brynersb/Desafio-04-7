{% extends "layout.njk" %}

{% block content %}
    <main>

        <div class="card">
            <section class="avatar2" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
            <section class="details">

                <div>
                    <form id="form-save" method='POST' action="/students?_method=PUT">
                        <h3>Editar Aluno</h3>
                        {%include 'students/fields.njk'%}
                        <input type="hidden" name="id" value="{{student.id}}">

                    </form>

                    <form id="form-delete" action="/students?_method=DELETE" method="post">
                        <input type="hidden" name="id" value="{{student.id}}">

                    </form>

                    <button id="form-delete" form="form-delete"type="submit">DELETAR</button>
                    <button form="form-save" type="submit">SALVAR</button>
                </div>

            </section>

        </div>
        {%include 'confirm.njk'%}
    </main>

{% endblock content %}